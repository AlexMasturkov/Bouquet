@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<div class="grid-three-column-equal border-3">
    <div class="item-row-center "><a class=" btn-wide btn-secondary a-btn  @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">Profile</a></div>
    <div class="item-row-center"><a class="btn-wide btn-secondary a-btn @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">Email</a></div>
    <div class="item-row-center m-0"><a class="btn-wide btn-secondary a-btn @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Password</a></div>
</div>
<div class="grid-two-column-equal m-t-5 border-3">
    @if (hasExternalLogins)
    {
        <div id="external-logins" style="pointer-events: none;" class="item-row-center m-0"><a id="external-login" class="btn-wide btn-secondary a-btn  @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">External logins</a></div>
    }
    @*<li class="nav-item"><a class="nav-link @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication">Two-factor authentication</a></li>*@
    <div class="item-row-center m-0"><a class="btn-wide btn-secondary a-btn @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">Personal data</a></div>
</div>

