
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="form-container shadow5  background-bright-grey p-b-5 hide" id="userDetailContainer"> 
    <div id="userDetails"></div>
</div>

<section class="form-container shadow5  background-bright-grey p-b-5" id="tableContainer">
    <div class="item-header text-header grid-three-column-center mobile-item ">
        <div class="item-row-right ">
            <a asp-action="Index" asp-area="Customer" asp-controller="Home" class="p-0 a-btn"><i class="icon-arrow-left-in-square i-btn "></i></a>
        </div>
        <h1 class="item-row-center">
            User List
        </h1>
        <div class="item-row-right ">
            <a asp-area="Identity" asp-page="/Account/Register" class="p-0 a-btn"><i class="icon-plus-in-square i-btn"></i> </a>
        </div>
    </div>

    @* Main layout*@
<div class="item-header text-header grid-three-column-center main-item shadow5" style="height:68px;">
    <div class="item-row p-5">
        <a asp-action="Index" asp-area="Customer" asp-controller="Home" class="p-0 a-btn item-row-left m-l-15"><i class="icon-arrow-left-in-square i-btn "></i></a>
    </div>
    <h1 class="item-row-center p-5 font-22">
        User List
    </h1>
    <div class="item-row p-5">
        <a asp-area="Identity" asp-page="/Account/Register" class="p-0 a-btn item-row-right m-r-15"><i class="icon-plus-in-square i-btn"></i> </a>
    </div>
</div>

    @*     See js code*@
    <div id="columns" class="border-3 background-medium-grey height-398-main"></div>

    <div class="grid-three-column-equal main-item p-b-15 background-medium-grey shadow5">
        <div class="item-row p-10">
        </div>
        <div>
            <div class="pagination main-item text-center " style="position:relative;top:10px;min-height:50px;" id="paginationCustom"> </div>
        </div>
        <div class="item-row p-10">
        </div>
    </div>

</section>
<div class="loader" id="loader"></div>

@section Scripts{

    <script src="~/js/user.js"></script>
}
