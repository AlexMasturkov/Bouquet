@model IEnumerable<Bouquet.Models.Product>
@using Bouquet.Utility;
    <div id="main-body">

        <div class="btn-group ml-1 mr-1 col-12 " id="header-top">
            <a class="btn   col-2 " id="rust" asp-action="Index" asp-route-id="Roses">Roses</a>
            <a class="btn  my-button-return col-2 " id="2" asp-action="Index" asp-route-id="Bouquets">Bouquets</a>
            <a class="btn  my-button-return col-2" id="3" asp-action="Index" asp-route-id="Anniversary">Anniversary</a>
            <a class="btn  my-button-return col-2" id="4" asp-action="Index" asp-route-id="Birthday">Birthday</a>
            <a class="btn  my-button-return col-2 " id="6" asp-action="Index" asp-route-id="Valentine">Valentine</a>
            <a class="btn  my-button-return col-2 " id="5" asp-action="Index" asp-route-id="">All</a>
        </div>
        <div id="result"></div>

        <div class="row justify-content-center">

            @foreach (var product in Model)
            {
            @*<div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-3 p-0 pt-1 pr-1 m-0 trest">*@
                <div class="trest m-1 mr-0">
                    @{
                        string myString = "" + SD.ConvertToRawHtml(@product.Description);
                    }

                    <div class="card-body p-1 pb-0 m-0 my-shadow-transp" style=" border-radius: .5rem !important; ">
                        <label class=" p-2 text-center col-12 m-0 font-adjust my-font" style="font-weight: 300;font-size:22px; color: white;">
                            @product.Name
                        </label>
                        <div class="flw">
                            <div class="d-flex justify-content-between align-items-center">
                                <img class="frameContainer card-img-top " src="@product.ImageUrl" alt="Card Image" />

                            </div>
                        </div>
                        <div class="description">
                            <div class="d-flex justify-content-center ">
                                <textarea style="font-size:14px; border-radius:5px; " class="p-1 mt-1 text-center"> @myString</textarea>
                            </div>
                        </div>
                        <div class=" description text-center my-base-color pt-1 pb-1 col-12 row m-0 mt-1 my-no-shadows text-white" style="font-size: 16px; font-weight: 600;background-color:white; border-radius:3px;">
                            <div class="col-8 mt-1 ">from $ @product.Price</div>
                            <div class="col-4">
                                <a class="btn my-button-success  text-white ml-2 mb-0 " asp-action="Details" asp-controller="Home" asp-route-id="@product.Id">Add</a>
                            </div>

                        </div>
                    </div>
                </div>

                }
            </div>
    </div>

@section Scripts{
    <script src="~/js/index.js"></script>
}
