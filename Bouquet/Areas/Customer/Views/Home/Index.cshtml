@model IEnumerable<Bouquet.Models.Product>
    <div class="row col-12 pb-3 ">

        @foreach (var product in Model)
        {

            <div class="col-lg-3 col-md-6 shadow m-1" style=" border-radius: 7px;">
                <div class="row ">
                    <div class="col-12 p-1" style=" border-radius: 5px;background-color:white;">
                        <div class="card" style="border:0px;">
                            <img src="@product.ImageUrl" class="card-img-top rounded" />
                            <div class="pl-1 mt-2">
                                <p class="card-title text-center font-weight-bold m-0" style="color:#2c3e50">@product.Name</p>
                                <p class="card-title text-center m-1" style="color:#2c3e50">CAD @product.Price</p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@product.Id">Details</a>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>