@model Bouquet.Models.ApplicationUser

@{
    string fullName ="";
    string second = "";
    if (@Model.Name !="")
    {
        fullName = @Model.Name;
    }
    string firstName = "";

    if (fullName != "") {

        int foundS1 = fullName.IndexOf(" ");
        firstName = fullName;
        if(foundS1!=-1)
        {
            string  first = firstName.Substring(0, 1).ToUpper();
            try
            {

                second = firstName.Substring((foundS1 + 1),1).ToUpper();
            }
            catch
            {
                second = "";

            }
            firstName =  first + second;
        }
        else
        {
            firstName = firstName + " ";
        }

    }
    else
    {
        firstName = " ";
    }

    }

    @firstName